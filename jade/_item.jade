//- DETAIL PAGE: Item Description
//- -----------------------------
mixin item-detail(params)
  .port-item-spc.item-description
    h1.port-item-title #{params['itemTitle']}
    .w-row
      .w-col.w-col-8
        h4.post-title Project description
        !=  params['itemDetailDescription']
      .w-col.w-col-4
        h4.post-title Project details
        ul.w-list-unstyled
          li
            p Client: #{params['itemDetailClient']}
          li
            p Role: #{params['itemDetailRole']}
          li
            p Tools used: #{params['itemDetailToolsUsed']}
          li
            p Created: #{params['itemDetailDateCreated']}
