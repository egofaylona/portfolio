//- Portfolio Item
//- ==============
//- 
//- Mixins for all Portfolio Item components

//- INDEX: Item
//- -----------

mixin item(params)
  - itemId = params['itemId']
  - itemType = params['itemType']
  - itemTypeAdditional = params['itemTypeAdditional'] ? ' ' + params['itemTypeAdditional'] : ''
  - itemThumbnail = 'images/items/th-' + itemType + '-' + itemId + '.png'
  .item.item-4-columns(class=itemType+itemTypeAdditional)
    .portfolio-overlay.wow.fadeInUp(data-ix='hover-portfolio-content')
      img(src=itemThumbnail)
      a.w-inline-block.portfolio-content.animsition-link(href='/item-#{itemType}-#{itemId}.html', data-ix='hide-portfolio-content-on-load')
        .portfolio-cn-title
          h4.portfolio-title(data-ix='scale-portfolio-title-on-load')= params['itemTitle']
          .portfolio-sub-title(data-ix='scale-portfolio-title-on-load-2')= params['itemSubtitle']
